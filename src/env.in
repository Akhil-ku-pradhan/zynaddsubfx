# This file sets environment variables for use with applications that are not
# in the directories which your system usually queries.
#
# If you have any such libraries, import this file once by using *one* of the
# following commands:
#
#   . env
#   source env

echo "Updating environment variables..."

# Start by using the old paths
LD_LIBRARY_PATH=$OLD_LD_LIBRARY_PATH
PKG_CONFIG_PATH=$OLD_PKG_CONFIG_PATH

# Backup old paths
OLD_LD_LIBRARY_PATH=$LD_LIBRARY_PATH
OLD_PKG_CONFIG_PATH=$PKG_CONFIG_PATH

NEW_LD_PATH=""
NEW_PKG_PATH=""

# minimal plugin
if [ ! -z "@MinimalEnable@" ]; then
    TMP=@MinimalDir@/lib@LIBSUFFIX@
    NEW_LD_PATH=${NEW_LD_PATH}:$TMP
    NEW_PKG_PATH=${NEW_PKG_PATH}:$TMP/pkgconfig
fi

# Cleanups
TMP=

# Update paths
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$NEW_LD_PATH
PKG_CONFIG_PATH=$PKG_CONFIG_PATH:$NEW_PKG_PATH

# Messages
echo "New LD_LIBRARY_PATH: ${LD_LIBRARY_PATH}"
echo "New PKG_CONFIG_PATH: ${PKG_CONFIG_PATH}"